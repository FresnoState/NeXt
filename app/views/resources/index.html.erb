<nav class="pull-right"><%= link_to 'Create Resource', new_resource_url, class: 'btn btn-success' %></nav>

<h1>Resources</h1>

<table class="table table-bordered table-striped table-responsive">
  <thead>
  <tr>
    <th>Name</th>
    <th>Users</th>
  </tr>
  </thead>
  <tbody>
  <% @resources.each do |resource| %>
    <tr>
      <td><%= resource.name %></td>
      <td><%= resource.users.count %></td>
      <td><%= link_to 'Edit', edit_resource_url(resource) %></td>
      <td><%= link_to 'Delete', resource_url(resource), method: :delete,
                      data: { confirm: "Are you sure you wish to delete \"#{resource.name}\"?" } %></td>
    </tr>
  <% end %>
  </tbody>
</table>
