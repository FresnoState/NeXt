<nav class="pull-right">
  <% if Badge.is_creatable_by? current_user %>
    <%= link_to 'Create Badge/Award', new_badge_url, class: 'btn btn-create' %>
  <% end %>
</nav>

<h2 class="text-center clear-both">
  <%= image_tag "/images/header_icons/badges.png" %>
  Badges
</h2>

<ul class="badges">
  <% @badges.each do |badge| %>
    <li>
      <%= render badge.becomes(Badge) %>
      <% if badge.is_editable_by? current_user %>
        <%= button_to 'Edit',
                      edit_badge_url(badge),
                      method: :get,
                      class: 'btn btn-edit btn-block',
                      form_class: 'button_to full-width'
        %>
        <%= button_to 'Delete',
                      badge_url(badge),
                      method: :delete,
                      class: 'btn btn-delete btn-block',
                      form_class: 'button_to full-width',
                      data: { confirm: 'Are you sure you want to delete this badge?' }
        %>
      <% end %>
    </li>
  <% end %>
</ul>

<h2 class="text-center clear-both">
  <%= image_tag "/images/header_icons/awards.png" %>
  Awards
</h2>

<ul class="badges">
  <% @awards.each do |badge| %>
    <li>
      <%= render badge.becomes(Badge) %>
      <% if badge.is_editable_by? current_user %>
        <%= button_to 'Edit',
                      edit_badge_url(badge),
                      method: :get,
                      class: 'btn btn-edit btn-block',
                      form_class: 'button_to full-width'
        %>
        <%= button_to 'Delete',
                      badge_url(badge),
                      method: :delete,
                      class: 'btn btn-delete btn-block',
                      form_class: 'button_to full-width',
                      data: { confirm: 'Are you sure you want to delete this award?' }
        %>
      <% end %>
    </li>
  <% end %>
</ul>
