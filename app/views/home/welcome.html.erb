<h1>NeXt Ideas</h1>

<p>A blurb about what UC next is...</p>

<div class="row">
  <div class="col-md-6">
    <section class="panel panel-default">
      <header class="panel-heading">
        <h4 class="panel-title">Popular Ideas</h4>
      </header>
      <div class="panel-body">
        <ul>
          <% Idea.joins(:idea_votes).select('`ideas`.id, `ideas`.name, count(*) as count').group('`ideas`.id').order('count DESC').take(5).each do |idea| %>
            <li><%= link_to idea.name, idea %></li>
          <% end %>
        </ul>
      </div>
    </section>
  </div>
  <div class="col-md-6">
    <section class="panel panel-default">
      <header class="panel-heading">
        <h4 class="panel-title">New Ideas</h4>
      </header>
      <div class="panel-body">
        <ul>
          <% Idea.order(created_at: :desc).take(5).each do |idea| %>
            <li><%= link_to idea.name, idea %></li>
          <% end %>
        </ul>
      </div>
    </section>
  </div>
</div>
