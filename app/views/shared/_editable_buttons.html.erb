<% if object.is_editable_by? current_user %>
  <%= button_to "Edit",
    url_for([:edit, object]),
    method: :get,
    class: "btn btn-edit btn-block",
    form_class: "button_to full-width"
  %>

  <%= button_to "Delete",
    url_for(object),
    method: :delete,
    class: "btn btn-delete btn-block",
    form_class: "button_to full-width",
    data: { confirm: "Are you sure you want to delete this #{object.class.name.downcase}?" }
  %>
<% end %>
