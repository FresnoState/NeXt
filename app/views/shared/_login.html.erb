<% if current_user %>
  <li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.display_name %> <span class="caret"></span></a>
    <ul class="dropdown-menu" role="menu">
      <li><%= link_to 'My Profile', user_path(current_user)  %></li>
      <li><%= link_to 'Logout',
                      auth_path,
                      :method => :delete,
                      :data => { :confirm => 'Are you sure you wish to logout?' }
      %></li>
    </ul>
  </li>
<% else %>
  <li><%= link_to 'Login', (Rails.application.config.respond_to?(:auth) and Rails.application.config.auth.respond_to?(:route)) ? Rails.application.config.auth.route : auth_oauth2_launch_url(:shibboleth) %></li>
<% end %>