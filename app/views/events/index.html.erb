<% if current_user %>
<%= button_to 'Create Event',
              new_event_url,
              method: 'get',
              class: 'btn btn-warning btn-block',
              form_class: 'button_to pull-right' %>
<%= link_to 'Show all', events_path, class: 'btn btn-warning' %>
<% end %>
<h2>Events</h2>

<%= will_paginate @events %>

<div class="list-group">
  <% @events.each do |event| %>
    <a class="list-group-item" href="<%= event_url(event) %>">
      <div class="row">
        <div class="col-sm-10">
          <h4><%= event.name %></h4>
          <% if event.start_datetime %>
          <p><small><%= event.start_datetime.strftime("%B %d, %Y") %>
            <% if event.start_datetime.strftime("%B %d, %Y") != event.stop_datetime.strftime("%B %d, %Y") %>
            - <%= event.stop_datetime.strftime("%B %d, %Y") %>
            <% end %>
          </small></p>
          <% end %>
        </div>
      </div>
    </a>
  <% end %>
</div>

<%= will_paginate @events %>
