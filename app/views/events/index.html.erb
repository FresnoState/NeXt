<% if context.user %>
<%= button_to 'Create Event',
              new_event_url,
              method: 'get',
              class: 'btn btn-warning btn-block',
              form_class: 'button_to pull-right' %>
<% end %>

<h2>Events</h2>

<%= will_paginate @events %>

<div class="list-group">
<% @events.each do |event| %>
  <a class="list-group-item" href="<%= event_url(event) %>">
    <div class="row">
      <div class="col-sm-10">
        <h4><%= event.name %></h4>
        <%= raw event.description %>
        <p><small>
          Started
          
          on <%= event.created_at.strftime("%B %d, %Y") %>
        </small></p>
      </div>
      <nav class="col-sm-2">
        <!-- TODO -->
      </nav>
    </div>
  </a>
<% end %>
</div>

<%= will_paginate @events %>