<div class="group">

  <% if @group.is_editable_by? current_user %>
      <div class="pull-right">
      <%= button_to 'Edit',
                    edit_group_url(@group),
                    method: :get,
                    class: 'btn btn-warning',
                    form_class: 'button_to'
      %>
      <%= button_to 'Delete',
                    group_url(@group),
                    method: :delete,
                    class: 'btn btn-danger',
                    form_class: 'button_to',
                    data: { confirm: 'Are you sure you want to delete this group?' }
      %>
      </div>
  <% end %>

  <h2><%= @group.name %></h2>

</div>
